    {
      "name": "Flight-Service",
      "item": [
        {
          "name": "Add Flight",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"airlineCode\": \"AI\",\n  \"fromCity\": \"DEL\",\n  \"toCity\": \"BOM\",\n  \"departureTime\": \"2025-12-15T10:00:00\",\n  \"arrivalTime\": \"2025-12-15T12:00:00\",\n  \"totalSeats\": 180\n}"
            },
            "url": "http://localhost:8080/flight-service/flights"
          }
        },
        {
          "name": "Get Flight by ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/flight-service/flights/1"
          }
        },
        {
          "name": "Search Flights",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/flight-service/flights/search?from=DEL&to=BOM&date=2025-12-15",
              "query": [
                { "key": "from", "value": "DEL" },
                { "key": "to", "value": "BOM" },
                { "key": "date", "value": "2025-12-15" }
              ]
            }
          }
        }
      ]
    },

