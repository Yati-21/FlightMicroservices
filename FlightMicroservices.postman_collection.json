              "raw": "{\n  \"flightId\": \"1\",\n  \"userId\": \"1\",\n  \"seatsBooked\": 2,\n  \"mealType\": \"VEG\",\n  \"flightType\": \"ECONOMY\",\n  \"passengers\": [\n    {\"name\":\"Amit\",\"gender\":\"M\",\"age\":25,\"seatNumber\":\"10A\"},\n    {\"name\":\"Pooja\",\"gender\":\"F\",\"age\":23,\"seatNumber\":\"10B\"}\n  ]\n}"
