package com.booking.service.client;

import com.booking.service.dto.FlightDto;
import com.booking.service.exception.BusinessException;
import com.booking.service.exception.NotFoundException;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.springframework.cloud.client.circuitbreaker.ReactiveCircuitBreaker;
import org.springframework.cloud.client.circuitbreaker.ReactiveCircuitBreakerFactory;
import org.springframework.web.reactive.function.client.*;

import reactor.core.publisher.Mono;
import reactor.test.StepVerifier;

import static org.mockito.ArgumentMatchers.*;
import static org.mockito.Mockito.*;

public class FlightClientReactiveTest {

    private WebClient.Builder webClientBuilder;
    private WebClient webClient;
    private ReactiveCircuitBreakerFactory cbFactory;
    private ReactiveCircuitBreaker cb;

    private FlightClientReactive client;

    @BeforeEach
    void setup() {

        webClientBuilder = mock(WebClient.Builder.class);
        webClient = mock(WebClient.class);

        cbFactory = mock(ReactiveCircuitBreakerFactory.class);
        cb = mock(ReactiveCircuitBreaker.class);

        when(webClientBuilder.build()).thenReturn(webClient);
        when(cbFactory.create(anyString())).thenReturn(cb);

        client = new FlightClientReactive(webClientBuilder, cbFactory);
    }

    @Test
    void testGetFlightById_Success() {
        FlightDto dto = new FlightDto();
        dto.setId("F1");

        var req = mock(WebClient.RequestHeadersUriSpec.class);
        var req2 = mock(WebClient.RequestHeadersSpec.class);
        var resp = mock(WebClient.ResponseSpec.class);

        when(webClient.get()).thenReturn(req);
        when(req.uri(anyString(), anyString())).thenReturn(req2);
        when(req2.retrieve()).thenReturn(resp);
        when(resp.onStatus(any(), any())).thenReturn(resp);
        when(resp.bodyToMono(FlightDto.class)).thenReturn(Mono.just(dto));

        when(cb.run(any(), any())).thenAnswer(inv -> inv.getArgument(0));

        StepVerifier.create(client.getFlightById("F1"))
                .expectNext(dto)
                .verifyComplete();
    }

    @Test
    void testGetFlightById_NotFound() {

        var req = mock(WebClient.RequestHeadersUriSpec.class);
        var req2 = mock(WebClient.RequestHeadersSpec.class);
        var resp = mock(WebClient.ResponseSpec.class);

        when(webClient.get()).thenReturn(req);
        when(req.uri(anyString(), anyString())).thenReturn(req2);
        when(req2.retrieve()).thenReturn(resp);

        when(resp.onStatus(any(), any()))
                .thenAnswer(i -> Mono.error(new NotFoundException("Flight not found")));

        when(cb.run(any(), any())).thenAnswer(inv -> inv.getArgument(0));

        StepVerifier.create(client.getFlightById("X"))
                .expectError(NotFoundException.class)
                .verify();
    }

    @Test
    void testGetFlightById_Fallback() {
        when(cb.run(any(), any()))
                .thenReturn(Mono.error(new BusinessException("Flight service unavailable")));

        StepVerifier.create(client.getFlightById("F1"))
                .expectError(BusinessException.class)
                .verify();
    }
}
